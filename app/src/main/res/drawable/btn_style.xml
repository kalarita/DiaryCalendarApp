<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按钮按下时的样式 -->
    <item android:state_pressed="true">
        <!-- shape：按钮形状 -->
        <shape android:shape="rectangle">
            <!-- solid：背景填充颜色 -->
            <solid android:color="#32CD32" />
            <!-- gradient：背景渐变颜色，如果不想按钮只有一种颜色，可以使用这个标签 -->
<!--            <gradient android:startColor="#dddddd" android:centerColor="#999999" android:endColor="#555555" android:angle="0" />-->
            <!-- corners：圆角 -->
            <corners android:radius="15dip" />
            <!-- stroke：边框 -->
            <stroke android:width="1dip" android:color="#32CD32" />
            <!-- padding：内边距 -->
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <!-- 按钮获得焦点时的样式 -->
    <item android:state_focused="true">
        <!-- shape：按钮形状 -->
        <shape android:shape="rectangle">
            <!-- solid：背景填充颜色 -->
            <solid android:color="#238E23" />
            <!-- gradient：背景渐变颜色，如果不想按钮只有一种颜色，可以使用这个标签 -->
<!--            <gradient android:startColor="#dddddd" android:centerColor="#999999" android:endColor="#555555" android:angle="0" />-->
            <!-- corners：圆角 -->
            <corners android:radius="15dip" />
            <!-- stroke：边框 -->
            <stroke android:width="1dip" android:color="#238E23" />
            <!-- padding：内边距 -->
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <!-- 按钮正常时的样式 -->
    <item>
        <!-- shape：按钮形状 -->
        <shape android:shape="rectangle">
            <!-- solid：背景填充颜色 -->
            <solid android:color="#93DB70" />
            <!-- gradient：背景渐变颜色，如果不想按钮只有一种颜色，可以使用这个标签 -->
<!--            <gradient android:startColor="#238E23" android:centerColor="#93DB70" android:endColor="#32CD32" android:angle="180" />-->
            <!-- corners：圆角 -->
            <corners android:radius="15dip" />
            <!-- stroke：边框 -->
            <stroke android:width="1dip" android:color="#32CD32" />
            <!-- padding：内边距 -->
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="3dp"
            android:elevation="4dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_shape"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/page_back"
        android:background="@color/transparent"
        android:layout_height="?attr/actionBarSize"
        app:srcCompat="@drawable/ic_arrow_left"
        android:contentDescription="@string/page_back"
        android:layout_width="?attr/actionBarSize" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/actionbar_title_size"
        android:layout_marginLeft="@dimen/actionbar_title_margin_left"
        android:layout_marginTop="@dimen/actionbar_title_margin_top"
        android:text="谷歌"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
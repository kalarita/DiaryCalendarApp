<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:clickable="false"
        android:focusable="false"
        android:duplicateParentState="true"
        android:id="@+id/setting_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginTop="@dimen/setting_item_margin_top"
        android:layout_marginBottom="@dimen/setting_item_margin_bottom"
        android:layout_marginLeft="@dimen/setting_item_margin_left"
        android:textSize="@dimen/setting_item_text_size"
        android:text="text" />

    <Switch
        android:clickable="false"
        android:focusable="false"
        android:id="@+id/switch_compat"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/setting_item_switch_margin_right"
        android:text="" />


</LinearLayout>